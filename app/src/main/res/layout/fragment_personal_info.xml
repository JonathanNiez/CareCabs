<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:app="http://schemas.android.com/apk/res-auto"
	xmlns:tools="http://schemas.android.com/tools"
	android:layout_width="match_parent"
	android:layout_height="match_parent"
	tools:context=".Fragments.PersonalInfoFragment">

	<androidx.cardview.widget.CardView
		android:id="@+id/customActionBarLayout"
		style="@style/ToolbarBackground"
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		app:cardElevation="10dp">

		<RelativeLayout
			android:layout_width="match_parent"
			android:layout_height="wrap_content">

			<androidx.appcompat.widget.AppCompatTextView
				android:id="@+id/personalInfoTextView"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:layout_centerInParent="true"
				android:layout_margin="15dp"
				android:fontFamily="@font/gabarito_bold"
				android:text="PERSONAL INFO"
				android:textColor="@color/white"
				android:textSize="20sp" />

		</RelativeLayout>

	</androidx.cardview.widget.CardView>

	<androidx.core.widget.NestedScrollView
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:layout_below="@id/customActionBarLayout">

		<androidx.appcompat.widget.LinearLayoutCompat
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:orientation="vertical">

			<androidx.cardview.widget.CardView
				style="@style/BaseCardBackground"
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:layout_margin="10dp"
				app:cardCornerRadius="10dp"
				app:cardElevation="5dp">

				<androidx.appcompat.widget.LinearLayoutCompat
					android:layout_width="match_parent"
					android:layout_height="wrap_content"
					android:gravity="center"
					android:orientation="vertical"
					android:padding="8dp">

					<androidx.appcompat.widget.LinearLayoutCompat
						style="@style/RoundedTextColor"
						android:layout_width="match_parent"
						android:layout_height="wrap_content"
						android:layout_marginStart="5dp"
						android:layout_marginTop="10dp"
						android:layout_marginEnd="5dp"
						android:layout_marginBottom="5dp"
						android:elevation="5dp"
						android:gravity="center"
						android:orientation="horizontal">

						<androidx.appcompat.widget.AppCompatTextView
							android:id="@+id/firstnameTextView"
							style="@style/TextColor"
							android:layout_width="0dp"
							android:layout_height="wrap_content"
							android:layout_weight="1"
							android:fontFamily="@font/gabarito_bold"
							android:padding="10dp"
							android:text="Firstname"
							android:textAlignment="center"
							android:textSize="20sp" />


						<androidx.appcompat.widget.AppCompatTextView
							android:id="@+id/lastnameTextView"
							style="@style/TextColor"
							android:layout_width="0dp"
							android:layout_height="wrap_content"
							android:layout_weight="1"
							android:fontFamily="@font/gabarito_bold"
							android:padding="10dp"
							android:text="Lastname"
							android:textAlignment="center"
							android:textSize="20sp" />

					</androidx.appcompat.widget.LinearLayoutCompat>

					<androidx.appcompat.widget.AppCompatTextView
						android:id="@+id/userTypeTextView"
						style="@style/RoundedTextColor"
						android:layout_width="match_parent"
						android:layout_height="wrap_content"
						android:layout_marginStart="5dp"
						android:layout_marginEnd="5dp"
						android:layout_marginBottom="5dp"
						android:elevation="5dp"
						android:fontFamily="@font/gabarito_semibold"
						android:padding="10dp"
						android:text="User Type"
						android:textAlignment="center"
						android:textSize="17sp" />

					<androidx.appcompat.widget.AppCompatTextView
						android:id="@+id/birthdateTextView"
						style="@style/RoundedTextColor"
						android:layout_width="match_parent"
						android:layout_height="wrap_content"
						android:layout_marginStart="5dp"
						android:layout_marginEnd="5dp"
						android:layout_marginBottom="5dp"
						android:elevation="5dp"
						android:fontFamily="@font/gabarito_semibold"
						android:padding="10dp"
						android:text="Birthdate"
						android:textAlignment="textStart"
						android:textSize="17sp" />

					<androidx.appcompat.widget.AppCompatTextView
						android:id="@+id/ageTextView"
						style="@style/RoundedTextColor"
						android:layout_width="match_parent"
						android:layout_height="wrap_content"
						android:layout_marginStart="5dp"
						android:layout_marginEnd="5dp"
						android:layout_marginBottom="5dp"
						android:elevation="5dp"
						android:fontFamily="@font/gabarito_semibold"
						android:padding="10dp"
						android:text="Age"
						android:textAlignment="textStart"
						android:textSize="17sp" />

					<androidx.appcompat.widget.AppCompatTextView
						android:id="@+id/sexTextView"
						style="@style/RoundedTextColor"
						android:layout_width="match_parent"
						android:layout_height="wrap_content"
						android:layout_marginStart="5dp"
						android:layout_marginEnd="5dp"
						android:layout_marginBottom="5dp"
						android:elevation="5dp"
						android:fontFamily="@font/gabarito_semibold"
						android:padding="10dp"
						android:text="Sex"
						android:textAlignment="textStart"
						android:textSize="17sp" />


					<androidx.appcompat.widget.AppCompatTextView
						android:id="@+id/disabilityTextView"
						style="@style/RoundedTextColor"
						android:layout_width="match_parent"
						android:layout_height="wrap_content"
						android:layout_marginStart="5dp"
						android:layout_marginEnd="5dp"
						android:layout_marginBottom="5dp"
						android:elevation="5dp"
						android:fontFamily="@font/gabarito_semibold"
						android:padding="10dp"
						android:text="Disability"
						android:textAlignment="textStart"
						android:textSize="17sp" />

					<androidx.appcompat.widget.AppCompatTextView
						android:id="@+id/medConTextView"
						style="@style/RoundedTextColor"
						android:layout_width="match_parent"
						android:layout_height="wrap_content"
						android:layout_marginStart="5dp"
						android:layout_marginEnd="5dp"
						android:layout_marginBottom="5dp"
						android:elevation="5dp"
						android:fontFamily="@font/gabarito_semibold"
						android:padding="10dp"
						android:text="Medical Condition"
						android:textAlignment="textStart"
						android:textSize="17sp" />

					<View
						style="@style/HorizontalLineBackground"
						android:layout_width="match_parent"
						android:layout_height="5dp"
						android:layout_margin="10dp" />

					<androidx.appcompat.widget.AppCompatTextView
						android:id="@+id/emailTextView"
						style="@style/RoundedTextColor"
						android:layout_width="match_parent"
						android:layout_height="wrap_content"
						android:layout_marginStart="5dp"
						android:layout_marginEnd="5dp"
						android:layout_marginBottom="5dp"
						android:elevation="5dp"
						android:fontFamily="@font/gabarito_semibold"
						android:padding="10dp"
						android:text="Email"
						android:textAlignment="textStart"
						android:textSize="17sp" />


					<androidx.appcompat.widget.AppCompatTextView
						android:id="@+id/phoneTextView"
						style="@style/RoundedTextColor"
						android:layout_width="match_parent"
						android:layout_height="wrap_content"
						android:layout_marginStart="5dp"
						android:layout_marginEnd="5dp"
						android:layout_marginBottom="5dp"
						android:elevation="5dp"
						android:fontFamily="@font/gabarito_semibold"
						android:padding="10dp"
						android:text="Phone No"
						android:textAlignment="textStart"
						android:textSize="17sp" />

					<androidx.appcompat.widget.AppCompatTextView
						android:id="@+id/registerTypeTextView"
						style="@style/RoundedTextColor"
						android:layout_width="match_parent"
						android:layout_height="wrap_content"
						android:layout_marginStart="5dp"
						android:layout_marginEnd="5dp"
						android:layout_marginBottom="5dp"
						android:elevation="5dp"
						android:fontFamily="@font/gabarito_semibold"
						android:padding="10dp"
						android:text="Register Type"
						android:textAlignment="textStart"
						android:textSize="17sp" />

					<androidx.appcompat.widget.AppCompatTextView
						android:id="@+id/accountCreationDateTextView"
						style="@style/RoundedTextColor"
						android:layout_width="match_parent"
						android:layout_height="wrap_content"
						android:layout_marginStart="5dp"
						android:layout_marginEnd="5dp"
						android:layout_marginBottom="5dp"
						android:elevation="5dp"
						android:fontFamily="@font/gabarito_semibold"
						android:padding="10dp"
						android:text="Account Creation Date"
						android:textAlignment="textStart"
						android:textSize="17sp" />

					<androidx.appcompat.widget.AppCompatTextView
						android:id="@+id/idTypeTextView"
						style="@style/RoundedTextColor"
						android:layout_width="match_parent"
						android:layout_height="wrap_content"
						android:layout_marginStart="5dp"
						android:layout_marginEnd="5dp"
						android:layout_marginBottom="5dp"
						android:elevation="5dp"
						android:fontFamily="@font/gabarito_semibold"
						android:padding="10dp"
						android:text="ID Type"
						android:textAlignment="center"
						android:textSize="17sp" />

					<androidx.cardview.widget.CardView
						style="@style/BaseCardBackground"
						android:layout_width="match_parent"
						android:layout_height="wrap_content"
						android:layout_margin="10dp"
						app:cardCornerRadius="10dp"
						app:cardElevation="5dp">

						<androidx.appcompat.widget.AppCompatImageView
							android:id="@+id/idImageView"
							android:layout_width="match_parent"
							android:layout_height="150dp"
							app:srcCompat="@drawable/face_id_100"
							style="@style/ImageViewTint"/>

					</androidx.cardview.widget.CardView>

					<androidx.appcompat.widget.AppCompatTextView
						android:id="@+id/idNumberTextView"
						style="@style/RoundedTextColor"
						android:layout_width="match_parent"
						android:layout_height="wrap_content"
						android:layout_marginStart="5dp"
						android:layout_marginEnd="5dp"
						android:layout_marginBottom="5dp"
						android:elevation="5dp"
						android:fontFamily="@font/gabarito_semibold"
						android:padding="10dp"
						android:text="ID Number"
						android:textAlignment="textStart"
						android:textSize="17sp" />

					<androidx.appcompat.widget.LinearLayoutCompat
						android:id="@+id/vehicleInfoLayout"
						android:layout_width="match_parent"
						android:layout_height="wrap_content"
						android:gravity="center"
						android:orientation="vertical">

						<View
							style="@style/HorizontalLineBackground"
							android:layout_width="match_parent"
							android:layout_height="5dp"
							android:layout_margin="10dp" />

						<androidx.cardview.widget.CardView
							android:layout_width="match_parent"
							android:layout_height="wrap_content"
							android:layout_marginStart="5dp"
							android:layout_marginEnd="5dp"
							android:layout_marginBottom="5dp"
							app:cardBackgroundColor="@color/white"
							app:cardCornerRadius="10dp"
							app:cardElevation="5dp">

							<androidx.appcompat.widget.AppCompatImageView
								android:id="@+id/vehicleImageView"
								android:layout_width="match_parent"
								android:layout_height="150dp"
								app:srcCompat="@drawable/car_100"
								style="@style/ImageViewTint"/>

						</androidx.cardview.widget.CardView>

						<androidx.appcompat.widget.AppCompatTextView
							android:id="@+id/vehicleColorTextView"
							style="@style/RoundedTextColor"
							android:layout_width="match_parent"
							android:layout_height="wrap_content"
							android:layout_marginStart="5dp"
							android:layout_marginEnd="5dp"
							android:layout_marginBottom="5dp"
							android:elevation="5dp"
							android:fontFamily="@font/gabarito_semibold"
							android:padding="10dp"
							android:text="Vehicle Color"
							android:textAlignment="textStart"
							android:textSize="17sp" />

						<androidx.appcompat.widget.AppCompatTextView
							android:id="@+id/vehiclePlateNumberTextView"
							style="@style/RoundedTextColor"
							android:layout_width="match_parent"
							android:layout_height="wrap_content"
							android:layout_marginStart="5dp"
							android:layout_marginEnd="5dp"
							android:layout_marginBottom="5dp"
							android:elevation="5dp"
							android:fontFamily="@font/gabarito_semibold"
							android:padding="10dp"
							android:text="Vehicle Plate Number"
							android:textAlignment="textStart"
							android:textSize="17sp" />

					</androidx.appcompat.widget.LinearLayoutCompat>

				</androidx.appcompat.widget.LinearLayoutCompat>

			</androidx.cardview.widget.CardView>

		</androidx.appcompat.widget.LinearLayoutCompat>

	</androidx.core.widget.NestedScrollView>

	<com.google.android.material.floatingactionbutton.FloatingActionButton
		android:id="@+id/backFloatingBtn"
		style="@style/FloatingButtonBackground"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:layout_alignParentEnd="true"
		android:layout_alignParentBottom="true"
		android:layout_marginStart="10dp"
		android:layout_marginTop="10dp"
		android:layout_marginEnd="10dp"
		android:layout_marginBottom="10dp"
		android:contentDescription="@string/accessibility"
		android:elevation="5dp"
		android:importantForAccessibility="yes"
		android:src="@drawable/back"
		app:fabSize="normal"
		app:useCompatPadding="true" />

</RelativeLayout>