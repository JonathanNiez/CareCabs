<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background"
    tools:context=".RegisterSenior">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageButton
                android:id="@+id/imgBackBtn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:layout_marginStart="20dp"
                android:layout_marginTop="20dp"
                android:src="@drawable/back64"
                android:background="@color/background"/>

            <ImageView
                android:id="@+id/logo"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:src="@drawable/logo"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="20dp"
                android:layout_marginBottom="20dp"
                />

            <TextView
                android:id="@+id/textView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Additional Registration \n for Senior Citizen"
                android:textAlignment="center"
                android:layout_below="@id/logo"
                android:layout_marginBottom="10dp"
                android:layout_centerHorizontal="true"
                android:textColor="@color/black"
                android:textSize="25sp"
                android:fontFamily="@font/opensans_semibold"/>

            <LinearLayout
                android:id="@+id/linearLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="vertical"
                android:layout_below="@id/textView">

                <com.google.android.material.textfield.TextInputLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/edit_text"
                    app:endIconMode="clear_text"
                    app:helperText="*Required"
                    app:helperTextTextColor="@color/red"
                    android:layout_marginBottom="30dp"
                    >

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/firstname"
                        android:layout_width="340dp"
                        android:layout_height="62dp"
                        android:background="@drawable/edit_text"
                        android:hint="FIRSTNAME"
                        android:autofillHints="name"
                        android:fontFamily="@font/opensans_bold"
                        android:textColor="@color/black"
                        android:textColorHint="@color/black" />

                </com.google.android.material.textfield.TextInputLayout>

                <com.google.android.material.textfield.TextInputLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/edit_text"
                    app:endIconMode="clear_text"
                    app:hintTextColor="@color/black"
                    android:layout_marginBottom="30dp"
                    app:helperText="*Required"
                    app:helperTextTextColor="@color/red"
                    >

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/lastname"
                        android:layout_width="340dp"
                        android:layout_height="62dp"
                        android:background="@drawable/edit_text"
                        android:hint="LASTNAME"
                        android:autofillHints="name"
                        android:fontFamily="@font/opensans_bold"
                        android:textColor="@color/black"
                        android:textColorHint="@color/black" />

                </com.google.android.material.textfield.TextInputLayout>

                <com.google.android.material.textfield.TextInputLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/edit_text"
                    app:endIconMode="clear_text"
                    app:hintTextColor="@color/black"
                    android:layout_marginBottom="30dp"
                    app:helperText="*Required"
                    app:helperTextTextColor="@color/red"
                    >

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/phoneNumber"
                        android:layout_width="340dp"
                        android:layout_height="62dp"
                        android:background="@drawable/edit_text"
                        android:hint="PHONE NUMBER"
                        android:inputType="number"
                        android:autofillHints="phone"
                        android:fontFamily="@font/opensans_bold"
                        android:textColor="@color/black"
                        android:textColorHint="@color/black" />

                </com.google.android.material.textfield.TextInputLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="5dp"
                    android:layout_marginStart="20dp"
                    android:layout_marginEnd="20dp"
                    android:layout_marginBottom="20dp"
                    android:background="@color/gray" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center">

                    <com.google.android.material.textfield.TextInputLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_margin="2.5dp"
                        android:background="@drawable/edit_text"
                        app:helperText="*Required"
                        app:helperTextTextColor="@color/red"
                        app:hintTextColor="@color/black">

                        <androidx.appcompat.widget.AppCompatButton
                            android:id="@+id/birthdateBtn"
                            android:layout_width="240dp"
                            android:layout_height="62dp"
                            android:background="@drawable/edit_text"
                            android:fontFamily="@font/opensans_bold"
                            android:text="Date of Birth"
                            android:textColor="@color/black"
                            android:textSize="15sp" />

                    </com.google.android.material.textfield.TextInputLayout>

                    <com.google.android.material.textfield.TextInputLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_margin="2.5dp"
                        android:background="@drawable/edit_text"
                        app:helperText="*Required"
                        app:helperTextTextColor="@color/red"
                        app:hintTextColor="@color/black">

                        <androidx.appcompat.widget.AppCompatButton
                            android:id="@+id/ageBtn"
                            android:layout_width="90dp"
                            android:layout_height="62dp"
                            android:background="@drawable/edit_text"
                            android:fontFamily="@font/opensans_bold"
                            android:text="Age"
                            android:textColor="@color/black"
                            android:textSize="15sp" />

                    </com.google.android.material.textfield.TextInputLayout>

                </LinearLayout>


                <com.google.android.material.textfield.TextInputLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="2.5dp"
                    android:background="@drawable/edit_text"
                    app:helperText="*Required"
                    app:helperTextTextColor="@color/red"
                    app:hintTextColor="@color/black">

                    <androidx.appcompat.widget.AppCompatSpinner
                        android:id="@+id/spinnerSex"
                        android:layout_width="150dp"
                        android:layout_height="62dp"
                        android:background="@drawable/edit_text" />

                </com.google.android.material.textfield.TextInputLayout>



            </LinearLayout>

            <LinearLayout
                android:id="@+id/progressBarLayout"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/linearLayout"
                android:layout_centerHorizontal="true"
                android:gravity="center"
                android:visibility="gone"
                android:layout_marginTop="50dp"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Please Wait..."
                    android:textSize="10pt"
                    android:textColor="@color/black"
                    />

                <ProgressBar
                    android:id="@+id/progressBar"
                    android:layout_width="50pt"
                    android:layout_height="50pt"
                    />

            </LinearLayout>

            <TextView
                android:id="@+id/textView2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/linearLayout"/>

            <LinearLayout
                android:id="@+id/idLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_below="@id/textView2"
                android:gravity="center">



            </LinearLayout>

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/scanIDBtn"
                android:layout_width="185dp"
                android:layout_height="78dp"
                android:layout_below="@id/linearLayout"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="30dp"
                android:background="@drawable/login_button"
                android:backgroundTint="@color/dark_gray"
                android:fontFamily="@font/opensans_bold"
                android:text="Scan ID"
                android:drawableEnd="@drawable/scan"
                android:textColor="@color/white"
                android:textSize="24sp" />

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/doneBtn"
                android:layout_width="185dp"
                android:layout_height="78dp"
                android:background="@drawable/login_button"
                android:text="Done"
                android:textSize="24sp"
                android:fontFamily="@font/opensans_bold"
                android:textColor="@color/white"
                android:layout_below="@id/scanIDBtn"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="50dp"/>

        </RelativeLayout>

    </ScrollView>

</RelativeLayout>