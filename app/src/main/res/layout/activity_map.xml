<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MapActivity">

    <ImageButton
        android:id="@+id/imgBackBtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_margin="20dp"
        android:background="@color/transparent"
        android:src="@drawable/back64" />

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/imgBackBtn"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="100dp"
        android:layout_alignTop="@id/mapView"
        >

        <androidx.cardview.widget.CardView
            android:layout_width="340dp"
            android:layout_height="40dp"
            android:elevation="4dp"
            app:cardCornerRadius="8dp"
            android:layout_gravity="center"
            android:backgroundTint="@color/gray">

            <TextView
                android:layout_width="340dp"
                android:layout_height="40dp"
                android:fontFamily="@font/opensans_semibold"
                android:text="Where to?"
                android:textAlignment="center"
                android:textColor="@color/black"
                android:textSize="24sp" />

        </androidx.cardview.widget.CardView>


    </FrameLayout>

    <com.mapbox.maps.MapView xmlns:mapbox="http://schemas.android.com/apk/res-auto"
        android:id="@+id/mapView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        mapbox:mapbox_cameraTargetLat="7.1907"
        mapbox:mapbox_cameraTargetLng="125.4553"
        mapbox:mapbox_cameraZoom="10.0" />


    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@id/mapView"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="30dp">

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/setLocationBtn"
            android:layout_width="300dp"
            android:layout_height="75dp"
            android:layout_gravity="center"
            android:background="@drawable/login_button"
            android:drawableStart="@drawable/location"
            android:fontFamily="@font/opensans_semibold"
            android:text="Set Location on Map"
            android:textColor="@color/white"
            android:textSize="20sp" />

    </FrameLayout>

</RelativeLayout>