<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background"
    tools:context=".Register">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageButton
                android:id="@+id/userTypeImageBtn"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:layout_alignParentTop="true"
                android:layout_alignParentEnd="true"
                android:layout_marginStart="10dp"
                android:layout_marginTop="10dp"
                android:layout_marginEnd="10dp"
                android:layout_marginBottom="10dp"
                android:scaleType="centerCrop"
                android:src="@drawable/account"
                android:background="@drawable/circular_button"
                android:backgroundTint="@color/yellow"/>

            <ImageButton
                android:id="@+id/imgBackBtn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:layout_marginStart="20dp"
                android:layout_marginTop="20dp"
                android:src="@drawable/back64"
                android:background="@color/background"/>

            <ImageView
                android:id="@+id/logo"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:src="@drawable/logo"
                android:layout_centerHorizontal="true"
                android:layout_marginBottom="20dp"
                android:layout_marginTop="-30dp"
                android:layout_below="@id/imgBackBtn"
                />

            <TextView
                android:id="@+id/textView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Register"
                android:textAlignment="center"
                android:layout_below="@id/logo"
                android:layout_marginBottom="10dp"
                android:layout_centerHorizontal="true"
                android:textColor="@color/black"
                android:textSize="25sp"
                android:fontFamily="@font/opensans_semibold"/>


            <LinearLayout
                android:id="@+id/linearLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="vertical"
                android:layout_below="@id/textView">

                <com.google.android.material.textfield.TextInputLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/edit_text"
                    app:endIconMode="clear_text"
                    app:helperTextTextColor="@color/black"
                    app:helperText="Your Email"
                    android:layout_marginBottom="30dp"
                    >

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/email"
                        android:layout_width="340dp"
                        android:layout_height="62dp"
                        android:background="@drawable/edit_text"
                        android:hint="EMAIL"
                        android:autofillHints="emailAddress"
                        android:fontFamily="@font/opensans_bold"
                        android:textColor="@color/black"
                        android:textColorHint="@color/black" />

                </com.google.android.material.textfield.TextInputLayout>

                <com.google.android.material.textfield.TextInputLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/edit_text"
                    app:endIconMode="password_toggle"
                    app:helperTextTextColor="@color/black"
                    app:helperText="Your Password"
                    android:layout_marginBottom="30dp"
                    >

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/password"
                        android:layout_width="340dp"
                        android:layout_height="62dp"
                        android:background="@drawable/edit_text"
                        android:hint="PASSWORD"
                        android:autofillHints="password"
                        android:fontFamily="@font/opensans_bold"
                        android:inputType="textPassword"
                        android:textColor="@color/black"
                        android:textColorHint="@color/black" />

                </com.google.android.material.textfield.TextInputLayout>

                <com.google.android.material.textfield.TextInputLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/edit_text"
                    app:endIconMode="password_toggle"
                    app:hintTextColor="@color/black"
                    android:layout_marginBottom="20dp"
                    app:helperTextTextColor="@color/black"
                    app:helperText="Match your Password"
                    >

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/confirmPassword"
                        android:layout_width="340dp"
                        android:layout_height="62dp"
                        android:background="@drawable/edit_text"
                        android:hint="CONFIRM PASSWORD"
                        android:fontFamily="@font/opensans_bold"
                        android:inputType="textPassword"
                        android:textColor="@color/black"
                        android:textColorHint="@color/black"/>

                </com.google.android.material.textfield.TextInputLayout>

            </LinearLayout>

            <LinearLayout
                android:id="@+id/googleRegisterLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginBottom="20dp"
                android:gravity="center"
                android:layout_below="@id/linearLayout"
                android:visibility="gone"
                >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/opensans_semibold"
                    android:text="You are Registering \n using Google"
                    android:textAlignment="center"
                    android:textColor="@color/black"
                    android:textSize="24sp"
                    />

                <ImageView
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:src="@drawable/google"/>

            </LinearLayout>

            <LinearLayout
                android:id="@+id/progressBarLayout"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/googleRegisterLayout"
                android:layout_centerHorizontal="true"
                android:gravity="center"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="30dp"
                android:orientation="vertical"
                android:visibility="gone"
                >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Please Wait..."
                    android:textSize="10pt"
                    android:textColor="@color/black"
                    />

                <pl.droidsonroids.gif.GifImageView
                    android:id="@+id/progressBar"
                    android:layout_width="50pt"
                    android:layout_height="50pt"
                    android:src="@drawable/loading_gif"
                    />

            </LinearLayout>

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/nextBtn"
                android:layout_width="185dp"
                android:layout_height="78dp"
                android:background="@drawable/login_button"
                android:text="Next"
                android:fontFamily="@font/opensans_bold"
                android:textSize="24sp"
                android:textColor="@color/white"
                android:layout_below="@id/googleRegisterLayout"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="20dp"
                android:layout_marginBottom="50dp"/>

        </RelativeLayout>

    </ScrollView>

</RelativeLayout>