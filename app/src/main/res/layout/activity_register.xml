<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:app="http://schemas.android.com/apk/res-auto"
	xmlns:tools="http://schemas.android.com/tools"
	android:layout_width="match_parent"
	android:layout_height="match_parent"
	android:background="@color/orange"
	tools:context=".Register.RegisterActivity">

	<ScrollView
		android:layout_width="match_parent"
		android:layout_height="wrap_content">

		<LinearLayout
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:gravity="center"
			android:orientation="vertical">

			<RelativeLayout
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:layout_gravity="top|center_horizontal"
				android:background="@drawable/rectangle_one"
				android:backgroundTint="@color/vermillion"
				android:elevation="5dp">

				<ImageView
					android:id="@+id/logo"
					android:layout_width="200dp"
					android:layout_height="100dp"
					android:layout_centerInParent="true"
					android:layout_marginStart="20dp"
					android:layout_marginTop="20dp"
					android:layout_marginEnd="20dp"
					android:layout_marginBottom="20dp"
					android:elevation="5dp"
					android:src="@drawable/logo_2_v2" />

				<androidx.appcompat.widget.AppCompatImageButton
					android:id="@+id/userTypeImageBtn"
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:layout_alignParentTop="true"
					android:layout_alignParentEnd="true"
					android:layout_marginStart="10dp"
					android:layout_marginTop="10dp"
					android:layout_marginEnd="10dp"
					android:layout_marginBottom="10dp"
					android:background="@drawable/circular_button"
					android:backgroundTint="@color/tomato"
					android:padding="10dp"
					android:scaleType="centerCrop"
					android:src="@drawable/driver_64" />

				<ImageButton
					android:id="@+id/imgBackBtn"
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:layout_alignParentStart="true"
					android:layout_alignParentTop="true"
					android:layout_marginStart="20dp"
					android:layout_marginTop="20dp"
					android:background="@color/vermillion"
					android:src="@drawable/back_50_2" />


			</RelativeLayout>


			<androidx.cardview.widget.CardView
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:layout_margin="10dp"
				app:cardBackgroundColor="@color/tomato"
				app:cardCornerRadius="20dp"
				app:cardElevation="5dp">

				<LinearLayout
					android:layout_width="match_parent"
					android:layout_height="wrap_content"
					android:gravity="center"
					android:orientation="vertical"
					android:padding="8dp">

					<TextView
						android:layout_width="wrap_content"
						android:layout_height="wrap_content"
						android:layout_margin="20dp"
						android:fontFamily="@font/gabarito_bold"
						android:shadowColor="@color/black"
						android:shadowDx="2"
						android:shadowDy="2"
						android:shadowRadius="4"
						android:text="REGISTER"
						android:textAlignment="center"
						android:textColor="@color/white"
						android:textSize="25sp" />

					<com.google.android.material.textfield.TextInputLayout
						android:layout_width="match_parent"
						android:layout_height="wrap_content"
						android:layout_marginBottom="10dp"
						android:background="@drawable/smooth_edit_text"
						android:elevation="5dp"
						android:padding="5dp"
						app:endIconMode="clear_text"
						app:helperText="Your Email"
						app:helperTextTextColor="@color/black"
						app:startIconDrawable="@drawable/email_24">

						<com.google.android.material.textfield.TextInputEditText
							android:id="@+id/email"
							android:layout_width="match_parent"
							android:layout_height="wrap_content"
							android:autofillHints="emailAddress"
							android:background="@drawable/smooth_edit_text_2"
							android:fontFamily="@font/gabarito_semibold"
							android:hint="EMAIL"
							android:inputType="textEmailAddress"
							android:textColor="@color/black"
							android:textColorHint="@color/black"
							android:textSize="17sp" />

					</com.google.android.material.textfield.TextInputLayout>

					<com.google.android.material.textfield.TextInputLayout
						android:layout_width="match_parent"
						android:layout_height="wrap_content"
						android:layout_marginBottom="10dp"
						android:background="@drawable/smooth_edit_text"
						android:elevation="5dp"
						android:padding="5dp"
						app:endIconMode="password_toggle"
						app:helperText="Your Password"
						app:helperTextTextColor="@color/black"
						app:startIconDrawable="@drawable/password_24">

						<com.google.android.material.textfield.TextInputEditText
							android:id="@+id/password"
							android:layout_width="match_parent"
							android:layout_height="wrap_content"
							android:autofillHints="password"
							android:background="@drawable/smooth_edit_text_2"
							android:fontFamily="@font/gabarito_semibold"
							android:hint="PASSWORD"
							android:inputType="textPassword"
							android:textColor="@color/black"
							android:textColorHint="@color/black"
							android:textSize="17sp" />

					</com.google.android.material.textfield.TextInputLayout>

					<com.google.android.material.textfield.TextInputLayout
						android:layout_width="match_parent"
						android:layout_height="wrap_content"
						android:layout_marginBottom="10dp"
						android:background="@drawable/smooth_edit_text"
						android:elevation="5dp"
						android:padding="5dp"
						app:endIconMode="password_toggle"
						app:helperText="Match your Password"
						app:helperTextTextColor="@color/black"
						app:hintTextColor="@color/black"
						app:startIconDrawable="@drawable/password_24">

						<com.google.android.material.textfield.TextInputEditText
							android:id="@+id/confirmPassword"
							android:layout_width="match_parent"
							android:layout_height="wrap_content"
							android:background="@drawable/smooth_edit_text_2"
							android:fontFamily="@font/gabarito_semibold"
							android:hint="CONFIRM PASSWORD"
							android:inputType="textPassword"
							android:textColor="@color/black"
							android:textColorHint="@color/black"
							android:textSize="17sp" />

					</com.google.android.material.textfield.TextInputLayout>

					<com.google.android.material.textfield.TextInputLayout
						android:layout_width="match_parent"
						android:layout_height="wrap_content"
						android:background="@drawable/smooth_edit_text"
						android:elevation="5dp"
						android:padding="5dp"
						app:counterEnabled="true"
						app:counterMaxLength="10"
						app:endIconMode="clear_text"
						app:helperText="*Required"
						app:helperTextTextColor="@color/red"
						app:prefixText="+63"
						app:prefixTextColor="@color/black"
						app:startIconDrawable="@drawable/phone_24">

						<com.google.android.material.textfield.TextInputEditText
							android:id="@+id/phoneNumber"
							android:layout_width="match_parent"
							android:layout_height="wrap_content"
							android:autofillHints="phone"
							android:background="@drawable/smooth_edit_text_2"
							android:fontFamily="@font/gabarito_semibold"
							android:hint="PHONE NUMBER (+63)"
							android:inputType="phone"
							android:maxLength="10"
							android:textColor="@color/black"
							android:textColorHint="@color/black"
							android:textSize="17sp" />

					</com.google.android.material.textfield.TextInputLayout>

					<TextView
						android:layout_width="wrap_content"
						android:layout_height="wrap_content"
						android:layout_margin="10dp"
						android:fontFamily="@font/gabarito_semibold"
						android:shadowColor="@color/black"
						android:shadowDx="2"
						android:shadowDy="2"
						android:shadowRadius="4"
						android:text="@string/never_share_your_password_to_anyone"
						android:textAlignment="center"
						android:textColor="@color/white"
						android:textSize="17sp" />

				</LinearLayout>


			</androidx.cardview.widget.CardView>


			<LinearLayout
				android:id="@+id/progressBarLayout"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:layout_margin="20dp"
				android:gravity="center"
				android:orientation="vertical">

				<TextView
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:fontFamily="@font/gabarito_bold"
					android:text="Please Wait..."
					android:textColor="@color/black"
					android:textSize="20sp" />

				<pl.droidsonroids.gif.GifImageView
					android:id="@+id/progressBar"
					android:layout_width="100dp"
					android:layout_height="100dp"
					android:src="@drawable/loading_gif" />

			</LinearLayout>

			<androidx.appcompat.widget.AppCompatButton
				android:id="@+id/nextBtn"
				android:layout_width="130dp"
				android:layout_height="50dp"
				android:background="@drawable/smooth_edge_button"
				android:backgroundTint="@color/yinmn_blue"
				android:elevation="5dp"
				android:fontFamily="@font/gabarito_semibold"
				android:text="Next"
				android:textColor="@color/white"
				android:textSize="17sp" />

			<androidx.appcompat.widget.AppCompatButton
				android:id="@+id/backBtn"
				android:layout_width="130dp"
				android:layout_height="50dp"
				android:layout_marginTop="50dp"
				android:layout_marginBottom="50dp"
				android:background="@drawable/smooth_edge_button"
				android:backgroundTint="@color/platinum"
				android:drawableStart="@drawable/back_50_2"
				android:elevation="5dp"
				android:fontFamily="@font/gabarito_semibold"
				android:text="Back"
				android:textAlignment="center"
				android:textColor="@color/black"
				android:textSize="17sp" />

		</LinearLayout>

	</ScrollView>

</RelativeLayout>