<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background"
    tools:context=".Fragments.AccountFragment">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <RelativeLayout
                android:id="@+id/upperLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/rectangle_one">

                <ImageButton
                    android:id="@+id/imgBackBtn"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentTop="true"
                    android:layout_marginStart="20dp"
                    android:layout_marginTop="20dp"
                    android:background="@color/yellow"
                    android:src="@drawable/back64" />

                <TextView
                    android:id="@+id/textView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/imgBackBtn"
                    android:layout_centerHorizontal="true"
                    android:layout_marginBottom="20dp"
                    android:fontFamily="@font/opensans_regular"
                    android:text="Account"
                    android:textSize="25sp"
                    android:layout_marginTop="30dp"
                    android:layout_alignParentTop="true"/>

                <de.hdodenhof.circleimageview.CircleImageView
                    android:id="@+id/profielPic"
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:layout_below="@id/textView"
                    android:layout_centerHorizontal="true"
                    android:scaleType="centerCrop"
                    android:src="@drawable/account" />

                <TextView
                    android:id="@+id/fullNameTextView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/profielPic"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="10dp"
                    android:layout_marginBottom="10dp"
                    android:fontFamily="@font/opensans_bold"
                    android:text="Name"
                    android:textColor="@color/black"
                    android:textSize="23sp" />

                <TextView
                    android:id="@+id/userTypeTextView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/fullNameTextView"
                    android:layout_centerHorizontal="true"
                    android:layout_marginBottom="20dp"
                    android:fontFamily="@font/opensans_semibold"
                    android:text="User Type"
                    android:textColor="@color/black"
                    android:textSize="23sp" />

            </RelativeLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:padding="5dp"
                android:orientation="vertical"
                android:background="@drawable/text_view_card">


                <TextView
                    android:id="@+id/statusTextView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="5dp"
                    android:fontFamily="@font/opensans_semibold"
                    android:text="Status:"
                    android:textColor="@color/black"
                    android:textSize="20sp" />

                <TextView
                    android:id="@+id/birthdateTextView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="5dp"
                    android:fontFamily="@font/opensans_semibold"
                    android:text="Birthdate"
                    android:textColor="@color/black"
                    android:textSize="20sp" />

                <TextView
                    android:id="@+id/ageTextView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="5dp"
                    android:fontFamily="@font/opensans_semibold"
                    android:text="Age"
                    android:textColor="@color/black"
                    android:textSize="20sp" />

                <TextView
                    android:id="@+id/sexTextView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="5dp"
                    android:fontFamily="@font/opensans_semibold"
                    android:text="Sex"
                    android:textColor="@color/black"
                    android:textSize="20sp" />


                <TextView
                    android:id="@+id/driverStatusTextView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="5dp"
                    android:fontFamily="@font/opensans_semibold"
                    android:text="Driver Status"
                    android:textColor="@color/black"
                    android:textSize="20sp"
                    android:visibility="gone" />

            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="5dp"
                android:layout_marginEnd="10dp"
                android:layout_marginStart="10dp"
                android:background="@color/gray" />


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:orientation="vertical">


                <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/editProfileBtn"
                    android:layout_width="match_parent"
                    android:layout_height="70dp"
                    android:background="@drawable/text_view_card"
                    android:drawableStart="@drawable/edit_32png"
                    android:drawableEnd="@drawable/right_arrow"
                    android:drawablePadding="5dp"
                    android:fontFamily="@font/opensans_semibold"
                    android:padding="10dp"
                    android:text="Edit Profile"
                    android:textAlignment="textStart"
                    android:textColor="@color/black"
                    android:textSize="20sp" />


                <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/changePasswordBtn"
                    android:layout_width="match_parent"
                    android:layout_height="70dp"
                    android:background="@drawable/text_view_card"
                    android:drawableStart="@drawable/reset_password_32"
                    android:drawableEnd="@drawable/right_arrow"
                    android:drawablePadding="5dp"
                    android:fontFamily="@font/opensans_semibold"
                    android:padding="10dp"
                    android:text="Change Password"
                    android:textAlignment="textStart"
                    android:textColor="@color/black"
                    android:textSize="20sp" />

                <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/appSettingsBtn"
                    android:layout_width="match_parent"
                    android:layout_height="70dp"
                    android:background="@drawable/text_view_card"
                    android:drawableStart="@drawable/settings_32"
                    android:drawableEnd="@drawable/right_arrow"
                    android:drawablePadding="5dp"
                    android:fontFamily="@font/opensans_semibold"
                    android:padding="10dp"
                    android:text="App Settings"
                    android:textAlignment="textStart"
                    android:textColor="@color/black"
                    android:textSize="20sp" />

                <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/secAndPriBtn"
                    android:layout_width="match_parent"
                    android:layout_height="70dp"
                    android:background="@drawable/text_view_card"
                    android:drawableStart="@drawable/privacy"
                    android:drawableEnd="@drawable/right_arrow"
                    android:drawablePadding="5dp"
                    android:fontFamily="@font/opensans_semibold"
                    android:padding="10dp"
                    android:text="Security And Privacy"
                    android:textAlignment="textStart"
                    android:textColor="@color/black"
                    android:textSize="18sp" />

                <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/signOutBtn"
                    android:layout_width="match_parent"
                    android:layout_height="70dp"
                    android:background="@drawable/text_view_card"
                    android:drawableEnd="@drawable/logout32"
                    android:fontFamily="@font/opensans_semibold"
                    android:padding="10dp"
                    android:text="Sign Out"
                    android:textAlignment="center"
                    android:textColor="@color/red"
                    android:textSize="20sp" />

            </LinearLayout>


        </LinearLayout>

    </ScrollView>


</RelativeLayout>