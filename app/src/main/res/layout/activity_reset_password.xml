<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:app="http://schemas.android.com/apk/res-auto"
	xmlns:tools="http://schemas.android.com/tools"
	android:layout_width="match_parent"
	android:layout_height="match_parent"
	android:background="@color/orange"
	tools:context=".ResetPasswordActivity">

	<RelativeLayout
		android:id="@+id/upperLayout"
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:background="@drawable/rectangle_one"
		android:backgroundTint="@color/vermillion">

		<ImageView
			android:id="@+id/logoImgView"
			android:layout_width="300dp"
			android:layout_height="100dp"
			android:layout_centerHorizontal="true"
			android:layout_margin="20dp"
			android:src="@drawable/logo_2_transparent" />

	</RelativeLayout>

	<LinearLayout
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:layout_below="@id/upperLayout"
		android:gravity="center"
		android:orientation="vertical">

		<androidx.cardview.widget.CardView
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:layout_margin="10dp"
			app:cardBackgroundColor="@color/tomato"
			app:cardCornerRadius="10dp"
			app:cardElevation="5dp">

			<LinearLayout
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:gravity="center"
				android:orientation="vertical"
				android:padding="8dp">

				<TextView
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:layout_margin="10dp"
					android:fontFamily="@font/opensans_bold"
					android:shadowColor="@color/black"
					android:shadowDx="2"
					android:shadowDy="2"
					android:shadowRadius="4"
					android:text="RESET PASSWORD"
					android:textColor="@color/white"
					android:textSize="20sp" />

				<com.google.android.material.textfield.TextInputLayout
					android:layout_width="match_parent"
					android:layout_height="wrap_content"
					android:background="@drawable/smooth_edit_text"
					android:elevation="5dp"
					android:padding="5dp"
					app:endIconMode="clear_text"
					app:helperText="Enter your Email to confirm password reset"
					app:helperTextTextColor="@color/black"
					app:startIconDrawable="@drawable/email_24">

					<com.google.android.material.textfield.TextInputEditText
						android:id="@+id/emailEditText"
						android:layout_width="match_parent"
						android:layout_height="wrap_content"
						android:background="@drawable/smooth_edit_text_2"
						android:fontFamily="@font/opensans_bold"
						android:hint="EMAIL"
						android:inputType="textEmailAddress"
						android:textColor="@color/black"
						android:textColorHint="@color/black"
						android:textSize="17sp" />

				</com.google.android.material.textfield.TextInputLayout>

				<TextView
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:layout_margin="10dp"
					android:fontFamily="@font/opensans_semibold"
					android:shadowColor="@color/black"
					android:shadowDx="2"
					android:shadowDy="2"
					android:shadowRadius="4"
					android:text="Never share your Password to anyone"
					android:textAlignment="center"
					android:textColor="@color/white"
					android:textSize="17sp" />


			</LinearLayout>

		</androidx.cardview.widget.CardView>

		<LinearLayout
			android:id="@+id/progressBarLayout"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_margin="10dp"
			android:gravity="center"
			android:orientation="vertical">

			<TextView
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:fontFamily="@font/opensans_bold"
				android:text="Please Wait..."
				android:textColor="@color/black"
				android:textSize="20sp" />

			<pl.droidsonroids.gif.GifImageView
				android:id="@+id/progressBar"
				android:layout_width="100dp"
				android:layout_height="100dp"
				android:src="@drawable/loading_gif" />

		</LinearLayout>

		<androidx.appcompat.widget.AppCompatButton
			android:id="@+id/resetPasswordBtn"
			android:layout_width="240dp"
			android:layout_height="60dp"
			android:background="@drawable/smooth_edge_button"
			android:backgroundTint="@color/yinmn_blue"
			android:elevation="5dp"
			android:fontFamily="@font/opensans_bold"
			android:text="Reset Password"
			android:textColor="@color/white"
			android:textSize="20sp" />

		<androidx.appcompat.widget.AppCompatButton
			android:id="@+id/backBtn"
			android:layout_width="150dp"
			android:layout_height="60dp"
			android:layout_marginTop="50dp"
			android:layout_marginBottom="50dp"
			android:background="@drawable/smooth_edge_button"
			android:backgroundTint="@color/platinum"
			android:drawableStart="@drawable/back_50_2"
			android:elevation="5dp"
			android:fontFamily="@font/opensans_bold"
			android:text="Back"
			android:textColor="@color/black"
			android:textSize="20sp" />

	</LinearLayout>

</RelativeLayout>