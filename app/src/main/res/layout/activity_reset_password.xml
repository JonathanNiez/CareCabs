<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:app="http://schemas.android.com/apk/res-auto"
	xmlns:tools="http://schemas.android.com/tools"
	android:layout_width="match_parent"
	android:layout_height="match_parent"
	android:background="@color/background"
	tools:context=".ResetPasswordActivity">

	<ImageButton
		android:id="@+id/imgBackBtn"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:layout_alignParentStart="true"
		android:layout_alignParentTop="true"
		android:layout_marginStart="20dp"
		android:layout_marginTop="20dp"
		android:background="@color/background"
		android:src="@drawable/back64" />

	<ImageView
		android:id="@+id/logoImgView"
		android:layout_width="100dp"
		android:layout_height="100dp"
		android:src="@drawable/logo"
		android:layout_centerHorizontal="true"
		android:layout_marginTop="20dp"/>

	<TextView
		android:id="@+id/textView"
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:text="Reset your Password"
		android:layout_below="@id/logoImgView"
		android:layout_marginStart="10dp"
		android:layout_marginEnd="10dp"
		android:layout_marginTop="20dp"
		android:textAlignment="center"
		android:textColor="@color/black"
		android:fontFamily="@font/opensans_bold"
		android:textSize="25sp"/>

	<LinearLayout
		android:id="@+id/linearLayout"
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:layout_below="@id/textView"
		android:gravity="center"
		android:orientation="vertical"
		android:layout_marginTop="20dp"
		android:layout_marginEnd="20dp"
		android:layout_marginStart="20dp">

		<com.google.android.material.textfield.TextInputLayout
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:layout_marginBottom="10dp"
			android:background="@drawable/edit_text"
			app:endIconMode="clear_text"
			app:helperText="Your Email to confirm password reset"
			app:helperTextTextColor="@color/black"
			app:startIconDrawable="@drawable/email_24"
			>

			<com.google.android.material.textfield.TextInputEditText
				android:id="@+id/emailEditText"
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:background="@drawable/edit_text"
				android:fontFamily="@font/opensans_bold"
				android:hint="EMAIL"
				android:inputType="textEmailAddress"
				android:textColor="@color/black"
				android:textColorHint="@color/black"
				android:textSize="18sp"
				/>

		</com.google.android.material.textfield.TextInputLayout>


		<com.google.android.material.textfield.TextInputLayout
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:layout_marginBottom="10dp"
			android:background="@drawable/edit_text"
			app:endIconMode="password_toggle"
			app:helperText="Your Current Password"
			app:helperTextTextColor="@color/black"
			app:startIconDrawable="@drawable/password_24"
			>

			<com.google.android.material.textfield.TextInputEditText
				android:id="@+id/passwordEditText"
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:background="@drawable/edit_text"
				android:fontFamily="@font/opensans_bold"
				android:hint="NEW PASSWORD"
				android:inputType="textPassword"
				android:textColor="@color/black"
				android:textColorHint="@color/black"
				android:textSize="18sp"
				/>

		</com.google.android.material.textfield.TextInputLayout>

		<com.google.android.material.textfield.TextInputLayout
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:background="@drawable/edit_text"
			app:endIconMode="password_toggle"
			app:helperText="Your Password must Match"
			app:helperTextTextColor="@color/black"
			app:hintTextColor="@color/black"
			app:startIconDrawable="@drawable/password_24"
			>

			<com.google.android.material.textfield.TextInputEditText
				android:id="@+id/confirmPasswordEditText"
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:background="@drawable/edit_text"
				android:fontFamily="@font/opensans_bold"
				android:hint="CONFIRM NEW PASSWORD"
				android:inputType="textPassword"
				android:textColor="@color/black"
				android:textColorHint="@color/black"
				android:textSize="18sp"
				/>

		</com.google.android.material.textfield.TextInputLayout>

		<TextView
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:layout_margin="10dp"
			android:fontFamily="@font/opensans_semibold"
			android:text="Never share your Password to anyone"
			android:textAlignment="center"
			android:textColor="@color/black"
			android:textSize="17sp" />

		<LinearLayout
			android:id="@+id/progressBarLayout"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_marginTop="10dp"
			android:gravity="center"
			android:orientation="vertical"
			>

			<TextView
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:text="Please Wait..."
				android:textColor="@color/black"
				android:textSize="10pt" />

			<pl.droidsonroids.gif.GifImageView
				android:id="@+id/progressBar"
				android:layout_width="50pt"
				android:layout_height="50pt"
				android:src="@drawable/loading_gif"/>

		</LinearLayout>

		<androidx.appcompat.widget.AppCompatButton
			android:id="@+id/resetPasswordBtn"
			android:layout_width="240dp"
			android:layout_height="60dp"
			android:layout_marginTop="10dp"
			android:background="@drawable/custom_button"
			android:fontFamily="@font/opensans_semibold"
			android:text="Reset Password"
			android:textColor="@color/white"
			android:textSize="20sp" />

	</LinearLayout>

</RelativeLayout>