<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:app="http://schemas.android.com/apk/res-auto"
	android:layout_width="match_parent"
	android:layout_height="match_parent"
	android:background="@color/orange"
	android:gravity="center"
	android:orientation="vertical">

	<ImageView
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:layout_marginTop="20dp"
		android:src="@drawable/help_64" />

	<androidx.cardview.widget.CardView
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:layout_margin="10dp"
		app:cardBackgroundColor="@color/platinum"
		app:cardCornerRadius="10dp"
		app:cardElevation="5dp">

		<LinearLayout
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:layout_margin="5dp"
			android:gravity="center"
			android:orientation="vertical">

			<TextView
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:layout_margin="10dp"
				android:fontFamily="@font/opensans_bold"
				android:text="RESET PASSWORD"
				android:textAlignment="center"
				android:textColor="@color/black"
				android:textSize="25sp" />

			<TextView
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:layout_margin="5dp"
				android:fontFamily="@font/opensans_semibold"
				android:text="Are you sure you want to cancel resetting your password?"
				android:textAlignment="center"
				android:textColor="@color/black"
				android:textSize="17sp" />

		</LinearLayout>

	</androidx.cardview.widget.CardView>


	<LinearLayout
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:layout_marginBottom="20dp"
		android:gravity="center"
		android:orientation="horizontal">

		<androidx.appcompat.widget.AppCompatButton
			android:id="@+id/noBtn"
			android:layout_width="130dp"
			android:layout_height="50dp"
			android:layout_marginEnd="5dp"
			android:background="@drawable/button_shape_1"
			android:backgroundTint="@color/yinmn_blue"
			android:fontFamily="@font/opensans_bold"
			android:text="No"
			android:textColor="@color/white"
			android:textSize="20sp" />

		<androidx.appcompat.widget.AppCompatButton
			android:id="@+id/yesBtn"
			android:layout_width="130dp"
			android:layout_height="50dp"
			android:layout_marginStart="5dp"
			android:background="@drawable/button_shape_1"
			android:backgroundTint="@color/red"
			android:fontFamily="@font/opensans_bold"
			android:text="Yes"
			android:textColor="@color/white"
			android:textSize="20sp" />

	</LinearLayout>


</LinearLayout>