<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:app="http://schemas.android.com/apk/res-auto"
	xmlns:tools="http://schemas.android.com/tools"
	android:layout_width="match_parent"
	android:layout_height="match_parent"
	android:background="@color/orange"
	tools:context=".ScanIDActivity">

	<androidx.cardview.widget.CardView
		android:id="@+id/customActionBarLayout"
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:layout_alignParentTop="true"
		app:cardBackgroundColor="@color/vermillion"
		app:cardElevation="10dp">

		<RelativeLayout
			android:layout_width="match_parent"
			android:layout_height="wrap_content">

			<ImageButton
				android:id="@+id/imgBackBtn"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:layout_alignParentStart="true"
				android:layout_alignParentTop="true"
				android:layout_marginStart="10dp"
				android:layout_marginTop="10dp"
				android:layout_marginEnd="10dp"
				android:layout_marginBottom="10dp"
				android:background="@color/vermillion"
				android:src="@drawable/back_50_2" />

			<TextView
				android:id="@+id/textView"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:layout_centerInParent="true"
				android:fontFamily="@font/opensans_bold"
				android:text="SCAN ID"
				android:textColor="@color/white"
				android:textSize="20sp" />


		</RelativeLayout>


	</androidx.cardview.widget.CardView>

	<ScrollView
		android:layout_width="match_parent"
		android:layout_height="match_parent"
		android:layout_above="@id/bottomLayout"
		android:layout_below="@id/customActionBarLayout">

		<LinearLayout
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:gravity="center"
			android:orientation="vertical">

			<androidx.cardview.widget.CardView
				android:id="@+id/imageLayout"
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:layout_marginStart="20dp"
				android:layout_marginTop="20dp"
				android:layout_marginEnd="20dp"
				android:layout_marginBottom="20dp"
				app:cardBackgroundColor="@color/platinum"
				app:cardCornerRadius="10dp"
				app:cardElevation="5dp">

				<ImageView
					android:id="@+id/idPreview"
					android:layout_width="match_parent"
					android:layout_height="300dp"
					android:layout_margin="5dp"
					android:scaleType="centerCrop"
					android:textColor="@color/black" />

			</androidx.cardview.widget.CardView>

		</LinearLayout>

	</ScrollView>

	<androidx.cardview.widget.CardView
		android:id="@+id/bottomLayout"
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:layout_alignParentBottom="true"
		app:cardBackgroundColor="@color/cinnabar"
		app:cardElevation="5dp">

		<LinearLayout
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:gravity="center"
			android:orientation="vertical">

			<TextView
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:layout_margin="5dp"
				android:fontFamily="@font/opensans_semibold"
				android:text="Tap/Click the camera icon to capture your ID"
				android:textAlignment="center"
				android:textColor="#000000"
				android:textSize="17sp" />


			<androidx.appcompat.widget.AppCompatImageButton
				android:id="@+id/getImageBtn"
				android:layout_width="80dp"
				android:layout_height="80dp"
				android:layout_gravity="center"
				android:layout_margin="20dp"
				android:background="@drawable/circular_button"
				android:src="@drawable/camera2" />

		</LinearLayout>

	</androidx.cardview.widget.CardView>

</RelativeLayout>