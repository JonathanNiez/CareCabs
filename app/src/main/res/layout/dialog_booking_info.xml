<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:app="http://schemas.android.com/apk/res-auto"
	android:layout_width="match_parent"
	android:layout_height="match_parent"
	android:background="@color/orange"
	android:gravity="center"
	android:orientation="vertical">

	<androidx.cardview.widget.CardView
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:layout_margin="10dp"
		app:cardBackgroundColor="@color/white"
		app:cardCornerRadius="10dp"
		app:cardElevation="5dp">

		<LinearLayout
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:gravity="center"
			android:orientation="vertical"
			android:padding="5dp">

			<TextView
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:fontFamily="@font/opensans_bold"
				android:padding="5dp"
				android:text="PASSENGER"
				android:textAlignment="center"
				android:textColor="@color/black"
				android:textSize="22sp" />

			<TextView
				android:id="@+id/bookingStatusTextView"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:fontFamily="@font/opensans_bold"
				android:padding="5dp"
				android:text="Booking Status"
				android:textAlignment="center"
				android:textColor="@color/black"
				android:textSize="20sp" />

			<de.hdodenhof.circleimageview.CircleImageView
				android:id="@+id/passengerProfilePic"
				android:layout_width="150dp"
				android:layout_height="150dp"
				android:layout_margin="10dp"
				android:elevation="5dp"
				android:scaleType="centerCrop"
				android:src="@drawable/account"
				app:civ_border_color="@color/black"
				app:civ_border_width="2dp" />

			<TextView
				android:id="@+id/fullNameTextView"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:fontFamily="@font/opensans_bold"
				android:padding="5dp"
				android:text="Name"
				android:textAlignment="center"
				android:textColor="@color/black"
				android:textSize="22sp" />


			<TextView
				android:id="@+id/userTypeTextView"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:layout_margin="10dp"
				android:background="@drawable/custom_card_view_1"
				android:backgroundTint="@color/background"
				android:elevation="5dp"
				android:fontFamily="@font/opensans_bold"
				android:padding="5dp"
				android:text="User Type"
				android:textAlignment="center"
				android:textColor="@color/black"
				android:textSize="20sp" />

			<TextView
				android:id="@+id/disabilityTextView"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:layout_marginStart="20dp"
				android:layout_marginEnd="20dp"
				android:layout_marginBottom="10dp"
				android:fontFamily="@font/opensans_semibold"
				android:text="Disability"
				android:textAlignment="center"
				android:textColor="@color/black"
				android:textSize="17sp" />

			<TextView
				android:id="@+id/medicalConditionTextView"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:layout_marginStart="20dp"
				android:layout_marginEnd="20dp"
				android:layout_marginBottom="10dp"
				android:fontFamily="@font/opensans_semibold"
				android:text="Medical Condition"
				android:textAlignment="center"
				android:textColor="@color/black"
				android:textSize="17sp" />



		</LinearLayout>

		<LinearLayout
			android:id="@+id/progressBarLayout"
			android:layout_width="match_parent"
			android:layout_height="match_parent"
			android:background="@color/white"
			android:gravity="center"
			android:visibility="gone">

			<pl.droidsonroids.gif.GifImageView
				android:layout_width="200dp"
				android:layout_height="200dp"
				android:src="@drawable/loading_gif" />

		</LinearLayout>


	</androidx.cardview.widget.CardView>

	<LinearLayout
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:layout_marginBottom="20dp"
		android:gravity="center">

		<androidx.appcompat.widget.AppCompatButton
			android:id="@+id/pickupBtn"
			android:layout_width="130dp"
			android:layout_height="50dp"
			android:layout_margin="5dp"
			android:background="@drawable/button_shape_1"
			android:backgroundTint="@color/yinmn_blue"
			android:elevation="5dp"
			android:fontFamily="@font/opensans_bold"
			android:text="Pickup"
			android:textColor="@color/white"
			android:textSize="17sp" />


		<androidx.appcompat.widget.AppCompatButton
			android:id="@+id/closeBtn"
			android:layout_width="130dp"
			android:layout_height="50dp"
			android:layout_margin="5dp"
			android:background="@drawable/button_shape_1"
			android:backgroundTint="@color/light_red"
			android:elevation="5dp"
			android:fontFamily="@font/opensans_bold"
			android:text="Close"
			android:textColor="@color/white"
			android:textSize="17sp" />

	</LinearLayout>

</LinearLayout>