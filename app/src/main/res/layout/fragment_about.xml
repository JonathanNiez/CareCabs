<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:app="http://schemas.android.com/apk/res-auto"
	xmlns:tools="http://schemas.android.com/tools"
	android:layout_width="match_parent"
	android:layout_height="match_parent"
	android:background="@color/orange"
	tools:context=".Fragments.AboutFragment">

	<androidx.cardview.widget.CardView
		android:id="@+id/customActionBarLayout"
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:layout_alignParentTop="true"
		app:cardBackgroundColor="@color/vermillion"
		app:cardElevation="10dp">

		<RelativeLayout
			android:layout_width="match_parent"
			android:layout_height="wrap_content">

			<ImageButton
				android:id="@+id/imgBackBtn"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:layout_alignParentStart="true"
				android:layout_alignParentTop="true"
				android:layout_marginStart="10dp"
				android:layout_marginTop="10dp"
				android:layout_marginEnd="10dp"
				android:layout_marginBottom="10dp"
				android:background="@color/vermillion"
				android:src="@drawable/back_50_2" />

			<TextView
				android:id="@+id/textView"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:layout_centerInParent="true"
				android:fontFamily="@font/opensans_bold"
				android:text="ABOUT"
				android:textColor="@color/white"
				android:textSize="20sp" />


		</RelativeLayout>

	</androidx.cardview.widget.CardView>

	<ScrollView
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:layout_below="@id/customActionBarLayout">

		<LinearLayout
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:gravity="center"
			android:orientation="vertical">

			<RelativeLayout
				android:id="@+id/upperLayout"
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:background="@drawable/rectangle_one"
				android:backgroundTint="@color/cinnabar"
				android:elevation="5dp">

				<ImageView
					android:layout_width="match_parent"
					android:layout_height="150dp"
					android:layout_centerHorizontal="true"
					android:src="@drawable/logo_2_v2" />

			</RelativeLayout>

			<androidx.cardview.widget.CardView
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:layout_margin="10dp"
				android:backgroundTint="@color/platinum"
				app:cardCornerRadius="10dp"
				app:cardElevation="5dp">

				<LinearLayout
					android:layout_width="match_parent"
					android:layout_height="wrap_content"
					android:layout_marginBottom="20dp"
					android:gravity="center"
					android:orientation="vertical">

					<TextView
						android:layout_width="wrap_content"
						android:layout_height="wrap_content"
						android:layout_marginTop="20dp"
						android:background="@drawable/custom_card_view_1"
						android:backgroundTint="@color/light_gray"
						android:elevation="5dp"
						android:fontFamily="@font/opensans_bold"
						android:padding="5dp"
						android:text="About Our Project"
						android:textColor="@color/black"
						android:textSize="22sp" />

					<TextView
						android:layout_width="wrap_content"
						android:layout_height="wrap_content"
						android:layout_margin="10dp"
						android:fontFamily="sans-serif"
						android:text="@string/about_p1"
						android:textAlignment="center"
						android:textColor="@color/black"
						android:textSize="17sp"
						android:textStyle="bold" />

					<TextView
						android:layout_width="wrap_content"
						android:layout_height="wrap_content"
						android:layout_marginTop="10dp"
						android:background="@drawable/custom_card_view_1"
						android:backgroundTint="@color/light_gray"
						android:elevation="5dp"
						android:fontFamily="@font/opensans_bold"
						android:padding="5dp"
						android:text="Our Mission"
						android:textColor="@color/black"
						android:textSize="20sp" />

					<TextView
						android:layout_width="wrap_content"
						android:layout_height="wrap_content"
						android:layout_margin="10dp"
						android:fontFamily="sans-serif"
						android:text="@string/our_mission"
						android:textAlignment="center"
						android:textColor="@color/black"
						android:textSize="17sp"
						android:textStyle="bold" />

					<TextView
						android:layout_width="wrap_content"
						android:layout_height="wrap_content"
						android:layout_marginTop="10dp"
						android:background="@drawable/custom_card_view_1"
						android:backgroundTint="@color/light_gray"
						android:elevation="5dp"
						android:fontFamily="@font/opensans_bold"
						android:padding="5dp"
						android:text="What Set Us Apart"
						android:textColor="@color/black"
						android:textSize="20sp" />

					<TextView
						android:layout_width="wrap_content"
						android:layout_height="wrap_content"
						android:layout_margin="10dp"
						android:fontFamily="sans-serif"
						android:text="@string/what_set_us_apart"
						android:textAlignment="center"
						android:textColor="@color/black"
						android:textSize="17sp"
						android:textStyle="bold" />

					<TextView
						android:layout_width="wrap_content"
						android:layout_height="wrap_content"
						android:layout_marginTop="10dp"
						android:background="@drawable/custom_card_view_1"
						android:backgroundTint="@color/light_gray"
						android:elevation="5dp"
						android:fontFamily="@font/opensans_bold"
						android:padding="5dp"
						android:text="Our Features"
						android:textColor="@color/black"
						android:textSize="20sp" />

					<TextView
						android:layout_width="wrap_content"
						android:layout_height="wrap_content"
						android:layout_gravity="start"
						android:layout_marginStart="10dp"
						android:layout_marginTop="10dp"
						android:elevation="5dp"
						android:fontFamily="@font/opensans_bold"
						android:text="Accessible Vehicles"
						android:textColor="@color/black"
						android:textSize="18sp" />

					<TextView
						android:layout_width="wrap_content"
						android:layout_height="wrap_content"
						android:layout_margin="10dp"
						android:fontFamily="sans-serif"
						android:text="@string/accessible_vehicles"
						android:textAlignment="center"
						android:textColor="@color/black"
						android:textSize="17sp"
						android:textStyle="bold" />

					<TextView
						android:layout_width="wrap_content"
						android:layout_height="wrap_content"
						android:layout_gravity="start"
						android:layout_marginStart="10dp"
						android:layout_marginTop="10dp"
						android:fontFamily="@font/opensans_bold"
						android:text="Personalized Assistance:"
						android:textColor="@color/black"
						android:textSize="18sp" />

					<TextView
						android:layout_width="wrap_content"
						android:layout_height="wrap_content"
						android:layout_margin="10dp"
						android:fontFamily="sans-serif"
						android:text="@string/personalized_assistance"
						android:textAlignment="center"
						android:textColor="@color/black"
						android:textSize="17sp"
						android:textStyle="bold" />

					<TextView
						android:layout_width="wrap_content"
						android:layout_height="wrap_content"
						android:layout_gravity="start"
						android:layout_marginStart="10dp"
						android:layout_marginTop="10dp"
						android:fontFamily="@font/opensans_bold"
						android:text="Safety First:"
						android:textColor="@color/black"
						android:textSize="18sp" />

					<TextView
						android:layout_width="wrap_content"
						android:layout_height="wrap_content"
						android:layout_margin="10dp"
						android:fontFamily="sans-serif"
						android:text="@string/safety_first"
						android:textAlignment="center"
						android:textColor="@color/black"
						android:textSize="17sp"
						android:textStyle="bold" />

					<de.hdodenhof.circleimageview.CircleImageView
						android:layout_width="150dp"
						android:layout_height="150dp"
						android:layout_marginTop="10dp"
						android:src="@drawable/hcdc_logo" />

					<TextView
						android:layout_width="wrap_content"
						android:layout_height="wrap_content"
						android:layout_marginTop="10dp"
						android:background="@drawable/custom_card_view_1"
						android:backgroundTint="@color/light_gray"
						android:elevation="5dp"
						android:fontFamily="@font/opensans_bold"
						android:padding="5dp"
						android:text="Acknowledgements"
						android:textColor="@color/black"
						android:textSize="25sp" />

					<TextView
						android:layout_width="wrap_content"
						android:layout_height="wrap_content"
						android:layout_margin="10dp"
						android:fontFamily="sans-serif"
						android:text="@string/acknowledgments"
						android:textAlignment="center"
						android:textColor="@color/black"
						android:textSize="17sp"
						android:textStyle="bold" />


				</LinearLayout>


			</androidx.cardview.widget.CardView>

		</LinearLayout>

	</ScrollView>

</RelativeLayout>