<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:app="http://schemas.android.com/apk/res-auto"
	style="@style/ItemCardBackground"
	android:layout_width="match_parent"
	android:layout_height="wrap_content"
	android:layout_margin="5dp"
	app:cardCornerRadius="10dp"
	app:cardElevation="5dp">

	<androidx.appcompat.widget.LinearLayoutCompat
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:gravity="center"
		android:orientation="vertical"
		android:padding="5dp">

		<androidx.appcompat.widget.AppCompatTextView
			android:id="@+id/yourCurrentBookingTextView"
			style="@style/TextColor"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_margin="10dp"
			android:fontFamily="@font/gabarito_bold"
			android:text="YOUR CURRENT BOOKING"
			android:textSize="20sp" />

		<androidx.cardview.widget.CardView
			style="@style/BaseCardBackground"
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:layout_margin="5dp"
			app:cardCornerRadius="10dp"
			app:cardElevation="5dp">

			<androidx.appcompat.widget.LinearLayoutCompat
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:gravity="center"
				android:orientation="vertical"
				android:padding="5dp">

				<androidx.appcompat.widget.AppCompatTextView
					style="@style/TextColor"
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:layout_gravity="start"
					android:layout_margin="5dp"
					android:fontFamily="@font/gabarito_medium"
					android:text="Pickup location:"
					android:textSize="18sp" />

				<androidx.appcompat.widget.AppCompatTextView
					android:id="@+id/pickupLocationTextView"
					style="@style/TextColor"
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:layout_margin="5dp"
					android:fontFamily="@font/gabarito_semibold"
					android:text="Pickup Location"
					android:textAlignment="center"
					android:textSize="20sp" />

				<pl.droidsonroids.gif.GifImageView
					android:id="@+id/loadingPickupLocation"
					android:layout_width="50dp"
					android:layout_height="50dp"
					android:src="@drawable/loading_gif" />

				<androidx.appcompat.widget.AppCompatTextView
					style="@style/TextColor"
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:layout_gravity="start"
					android:layout_margin="5dp"
					android:fontFamily="@font/gabarito_medium"
					android:text="Destination:"
					android:textSize="18sp" />

				<androidx.appcompat.widget.AppCompatTextView
					android:id="@+id/destinationTextView"
					style="@style/TextColor"
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:layout_margin="5dp"
					android:fontFamily="@font/gabarito_semibold"
					android:text="Destination Location"
					android:textAlignment="center"
					android:textSize="20sp" />

				<pl.droidsonroids.gif.GifImageView
					android:id="@+id/loadingDestinationLocation"
					android:layout_width="50dp"
					android:layout_height="50dp"
					android:src="@drawable/loading_gif" />

			</androidx.appcompat.widget.LinearLayoutCompat>


		</androidx.cardview.widget.CardView>

		<androidx.appcompat.widget.AppCompatTextView
			android:id="@+id/bookingStatusTextView"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_margin="10dp"
			android:background="@drawable/custom_card_view_1"
			android:elevation="5dp"
			android:fontFamily="@font/gabarito_semibold"
			android:padding="10dp"
			android:text="Booking Status"
			android:textColor="@color/blue"
			android:textSize="20sp" />

		<androidx.cardview.widget.CardView
			android:id="@+id/driverDetailsLayout"
			style="@style/BaseCardBackground"
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:layout_margin="10dp"
			app:cardCornerRadius="10dp"
			app:cardElevation="5dp">

			<androidx.appcompat.widget.LinearLayoutCompat
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:gravity="center"
				android:orientation="vertical"
				android:padding="5dp">

				<androidx.appcompat.widget.AppCompatTextView
					android:id="@+id/driverOnTheWayTextView"
					style="@style/IndicatorTextColor"
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:layout_margin="10dp"
					android:fontFamily="@font/gabarito_bold"
					android:text="Your Driver is on the way"
					android:textAlignment="center"
					android:textSize="25sp" />

				<androidx.appcompat.widget.AppCompatTextView
					android:id="@+id/driverArrivalTimeTextView"
					style="@style/TextColor"
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:layout_margin="10dp"
					android:fontFamily="@font/gabarito_bold"
					android:text="Arrival Time"
					android:textAlignment="center"
					android:textSize="20sp" />

				<androidx.appcompat.widget.AppCompatTextView
					android:id="@+id/vehicleColorTextView"
					style="@style/TextColor"
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:layout_gravity="start"
					android:layout_margin="5dp"
					android:fontFamily="@font/gabarito_semibold"
					android:text="Vehicle Color"
					android:textSize="20sp" />

				<androidx.appcompat.widget.AppCompatTextView
					android:id="@+id/vehiclePlateNumberTextView"
					style="@style/TextColor"
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:layout_gravity="start"
					android:layout_margin="5dp"
					android:fontFamily="@font/gabarito_semibold"
					android:text="Vehicle Plate Number"
					android:textSize="20sp" />

				<androidx.appcompat.widget.LinearLayoutCompat
					android:id="@+id/chatDriverBtn"
					android:layout_width="200dp"
					android:layout_height="50dp"
					android:layout_margin="10dp"
					android:background="@drawable/smooth_edge_button"
					android:backgroundTint="@color/yinmn_blue"
					android:elevation="5dp"
					android:gravity="center"
					android:orientation="horizontal">

					<androidx.appcompat.widget.AppCompatTextView
						android:layout_width="wrap_content"
						android:layout_height="wrap_content"
						android:layout_gravity="start|center_vertical"
						android:layout_margin="5dp"
						android:fontFamily="@font/gabarito_semibold"
						android:text="CHAT DRIVER"
						android:textColor="@color/white"
						android:textSize="17sp" />

					<androidx.appcompat.widget.AppCompatImageView
						android:layout_width="wrap_content"
						android:layout_height="wrap_content"
						android:layout_gravity="end|center_vertical"
						android:layout_margin="5dp"
						app:srcCompat="@drawable/chat_32_white" />

				</androidx.appcompat.widget.LinearLayoutCompat>

			</androidx.appcompat.widget.LinearLayoutCompat>

		</androidx.cardview.widget.CardView>

		<androidx.appcompat.widget.AppCompatButton
			android:id="@+id/cancelBookingBtn"
			android:layout_width="200dp"
			android:layout_height="50dp"
			android:layout_margin="10dp"
			android:background="@drawable/smooth_edge_button"
			android:backgroundTint="@color/red"
			android:elevation="5dp"
			android:fontFamily="@font/gabarito_semibold"
			android:text="Cancel Booking"
			android:textColor="@color/white"
			android:textSize="17sp" />

		<androidx.appcompat.widget.AppCompatTextView
			android:id="@+id/rateYourDriverTextView"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_gravity="center"
			android:layout_margin="5dp"
			android:fontFamily="@font/gabarito_semibold"
			android:text="Rate your Driver"
			android:textAlignment="center"
			android:textColor="@color/black"
			android:textSize="20sp" />

		<androidx.appcompat.widget.LinearLayoutCompat
			android:id="@+id/rateDriverBtn"
			android:layout_width="200dp"
			android:layout_height="50dp"
			android:layout_margin="10dp"
			android:background="@drawable/smooth_edge_button"
			android:backgroundTint="@color/yinmn_blue"
			android:gravity="center"
			android:orientation="horizontal">

			<androidx.appcompat.widget.AppCompatTextView
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:layout_gravity="start|center_vertical"
				android:layout_margin="5dp"
				android:fontFamily="@font/gabarito_semibold"
				android:text="RATE DRIVER"
				android:textColor="@color/white"
				android:textSize="17sp" />

			<androidx.appcompat.widget.AppCompatImageView
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:layout_gravity="end|center_vertical"
				android:layout_margin="5dp"
				app:srcCompat="@drawable/star_white_32" />

		</androidx.appcompat.widget.LinearLayoutCompat>

	</androidx.appcompat.widget.LinearLayoutCompat>

</androidx.cardview.widget.CardView>