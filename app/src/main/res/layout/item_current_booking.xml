<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:app="http://schemas.android.com/apk/res-auto"
	android:layout_width="match_parent"
	android:layout_height="wrap_content"
	android:layout_margin="10dp"
	android:layout_marginBottom="10dp"
	app:cardBackgroundColor="@color/tomato"
	app:cardCornerRadius="10dp"
	app:cardElevation="5dp">

	<androidx.cardview.widget.CardView
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:layout_margin="10dp"
		app:cardCornerRadius="10dp"
		app:cardElevation="5dp">

		<androidx.appcompat.widget.LinearLayoutCompat
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:gravity="center"
			android:orientation="vertical"
			android:padding="5dp">

			<androidx.appcompat.widget.AppCompatTextView
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:layout_margin="10dp"
				android:fontFamily="@font/gabarito_bold"
				android:text="YOUR CURRENT BOOKING"
				android:textColor="@color/black"
				android:textSize="20sp" />

			<androidx.cardview.widget.CardView
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:layout_margin="5dp"
				app:cardCornerRadius="10dp"
				app:cardElevation="5dp">

				<androidx.appcompat.widget.LinearLayoutCompat
					android:layout_width="match_parent"
					android:layout_height="wrap_content"
					android:gravity="center"
					android:orientation="vertical"
					android:padding="5dp">

					<androidx.appcompat.widget.AppCompatTextView
						android:layout_width="wrap_content"
						android:layout_height="wrap_content"
						android:layout_gravity="start"
						android:layout_margin="5dp"
						android:fontFamily="@font/gabarito_medium"
						android:text="Pickup location:"
						android:textColor="@color/black"
						android:textSize="17sp" />

					<androidx.appcompat.widget.AppCompatTextView
						android:id="@+id/pickupLocationTextView"
						android:layout_width="wrap_content"
						android:layout_height="wrap_content"
						android:layout_margin="5dp"
						android:fontFamily="@font/gabarito_semibold"
						android:text="Pickup Location"
						android:textAlignment="center"
						android:textColor="@color/black"
						android:textSize="18sp" />

					<pl.droidsonroids.gif.GifImageView
						android:id="@+id/loadingPickupLocation"
						android:layout_width="50dp"
						android:layout_height="50dp"
						android:src="@drawable/loading_gif" />

					<androidx.appcompat.widget.AppCompatTextView
						android:layout_width="wrap_content"
						android:layout_height="wrap_content"
						android:layout_gravity="start"
						android:layout_margin="5dp"
						android:fontFamily="@font/gabarito_medium"
						android:text="Destination:"
						android:textColor="@color/black"
						android:textSize="17sp" />

					<androidx.appcompat.widget.AppCompatTextView
						android:id="@+id/destinationLocationTextView"
						android:layout_width="wrap_content"
						android:layout_height="wrap_content"
						android:layout_margin="5dp"
						android:fontFamily="@font/gabarito_semibold"
						android:text="Destination Location"
						android:textAlignment="center"
						android:textColor="@color/black"
						android:textSize="18sp" />

					<pl.droidsonroids.gif.GifImageView
						android:id="@+id/loadingDestinationLocation"
						android:layout_width="50dp"
						android:layout_height="50dp"
						android:src="@drawable/loading_gif" />

				</androidx.appcompat.widget.LinearLayoutCompat>


			</androidx.cardview.widget.CardView>

			<androidx.appcompat.widget.AppCompatTextView
				android:id="@+id/bookingStatusTextView"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:layout_margin="10dp"
				android:background="@drawable/custom_card_view_1"
				android:elevation="5dp"
				android:fontFamily="@font/gabarito_semibold"
				android:padding="10dp"
				android:text="Booking Status"
				android:textColor="@color/blue"
				android:textSize="20sp" />

			<androidx.cardview.widget.CardView
				android:id="@+id/driverDetailsLayout"
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:layout_margin="10dp"
				app:cardCornerRadius="10dp"
				app:cardElevation="5dp">

				<androidx.appcompat.widget.LinearLayoutCompat
					android:layout_width="match_parent"
					android:layout_height="wrap_content"
					android:gravity="center"
					android:orientation="vertical"
					android:padding="5dp">

					<androidx.appcompat.widget.AppCompatTextView
						android:id="@+id/driverOnTheWayTextView"
						android:layout_width="wrap_content"
						android:layout_height="wrap_content"
						android:layout_margin="10dp"
						android:textAlignment="center"
						android:fontFamily="@font/gabarito_bold"
						android:text="Your Driver is on the way"
						android:textColor="@color/blue"
						android:textSize="25sp" />

					<androidx.appcompat.widget.AppCompatTextView
						android:id="@+id/driverArrivalTimeTextView"
						android:layout_width="wrap_content"
						android:layout_height="wrap_content"
						android:layout_margin="10dp"
						android:fontFamily="@font/gabarito_bold"
						android:text="Arrival Time"
						android:textAlignment="center"
						android:textColor="@color/black"
						android:textSize="20sp" />

					<androidx.appcompat.widget.AppCompatTextView
						android:id="@+id/vehicleColorTextView"
						android:layout_width="wrap_content"
						android:layout_height="wrap_content"
						android:layout_gravity="start"
						android:layout_margin="5dp"
						android:fontFamily="@font/gabarito_semibold"
						android:text="Vehicle Color"
						android:textColor="@color/black"
						android:textSize="20sp" />

					<androidx.appcompat.widget.AppCompatTextView
						android:id="@+id/vehiclePlateNumberTextView"
						android:layout_width="wrap_content"
						android:layout_height="wrap_content"
						android:layout_gravity="start"
						android:layout_margin="5dp"
						android:fontFamily="@font/gabarito_semibold"
						android:text="Vehicle Plate Number"
						android:textColor="@color/black"
						android:textSize="20sp" />

					<androidx.appcompat.widget.LinearLayoutCompat
						android:id="@+id/chatDriverBtn"
						android:layout_width="200dp"
						android:layout_height="50dp"
						android:layout_margin="10dp"
						android:background="@drawable/smooth_edge_button"
						android:backgroundTint="@color/yinmn_blue"
						android:gravity="center"
						android:orientation="horizontal">

						<androidx.appcompat.widget.AppCompatTextView
							android:layout_width="wrap_content"
							android:layout_height="wrap_content"
							android:layout_gravity="start|center_vertical"
							android:layout_margin="5dp"
							android:fontFamily="@font/gabarito_semibold"
							android:text="CHAT DRIVER"
							android:textColor="@color/white"
							android:textSize="17sp" />

						<androidx.appcompat.widget.AppCompatImageView
							android:layout_width="wrap_content"
							android:layout_height="wrap_content"
							android:layout_gravity="end|center_vertical"
							android:layout_margin="5dp"
							app:srcCompat="@drawable/chat_32_white" />

					</androidx.appcompat.widget.LinearLayoutCompat>

				</androidx.appcompat.widget.LinearLayoutCompat>

			</androidx.cardview.widget.CardView>

			<androidx.appcompat.widget.AppCompatButton
				android:id="@+id/cancelBookingBtn"
				android:layout_width="200dp"
				android:layout_height="50dp"
				android:layout_margin="10dp"
				android:background="@drawable/smooth_edge_button"
				android:backgroundTint="@color/red"
				android:fontFamily="@font/gabarito_semibold"
				android:text="Cancel Booking"
				android:textColor="@color/white"
				android:textSize="17sp" />

			<androidx.appcompat.widget.LinearLayoutCompat
				android:id="@+id/rateDriverBtn"
				android:layout_width="200dp"
				android:layout_height="50dp"
				android:layout_margin="10dp"
				android:background="@drawable/smooth_edge_button"
				android:backgroundTint="@color/yinmn_blue"
				android:gravity="center"
				android:orientation="horizontal">

				<androidx.appcompat.widget.AppCompatTextView
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:layout_gravity="start|center_vertical"
					android:layout_margin="5dp"
					android:fontFamily="@font/gabarito_semibold"
					android:text="RATE DRIVER"
					android:textColor="@color/white"
					android:textSize="17sp" />

				<androidx.appcompat.widget.AppCompatImageView
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:layout_gravity="end|center_vertical"
					android:layout_margin="5dp"
					app:srcCompat="@drawable/star_white_32" />

			</androidx.appcompat.widget.LinearLayoutCompat>

		</androidx.appcompat.widget.LinearLayoutCompat>

	</androidx.cardview.widget.CardView>

</androidx.cardview.widget.CardView>