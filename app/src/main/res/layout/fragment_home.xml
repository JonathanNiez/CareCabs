									android:fontFamily="@font/gabarito_semibold"
									android:text="Help"
									android:textAlignment="center"
									android:textColor="@color/black"
									android:textSize="17sp" />

							</androidx.appcompat.widget.LinearLayoutCompat>

						</androidx.cardview.widget.CardView>

					</androidx.appcompat.widget.LinearLayoutCompat>

				</androidx.appcompat.widget.LinearLayoutCompat>

			</androidx.cardview.widget.CardView>

