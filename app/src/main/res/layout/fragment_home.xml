<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:app="http://schemas.android.com/apk/res-auto"
	xmlns:tools="http://schemas.android.com/tools"
	android:layout_width="match_parent"
	android:layout_height="match_parent"
	android:background="@color/orange"
	tools:context=".Fragments.HomeFragment">

	<androidx.cardview.widget.CardView
		android:id="@+id/customActionBarLayout"
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		app:cardBackgroundColor="@color/vermillion"
		app:cardElevation="5dp">

		<RelativeLayout
			android:layout_width="match_parent"
			android:layout_height="wrap_content">

			<TextView
				android:id="@+id/textView"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:layout_centerInParent="true"
				android:layout_marginStart="20dp"
				android:layout_marginTop="20dp"
				android:layout_marginEnd="20dp"
				android:layout_marginBottom="20dp"
				android:fontFamily="@font/opensans_bold"
				android:text="HOME"
				android:textColor="@color/white"
				android:textSize="20sp" />


		</RelativeLayout>

	</androidx.cardview.widget.CardView>

	<ScrollView
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:layout_below="@id/customActionBarLayout">

		<LinearLayout
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:gravity="center"
			android:orientation="vertical">

			<androidx.cardview.widget.CardView
				android:layout_width="match_parent"
				android:layout_height="match_parent"
				android:layout_margin="10dp"
				app:cardBackgroundColor="@color/tomato"
				app:cardCornerRadius="10dp"
				app:cardElevation="5dp">

				<LinearLayout
					android:layout_width="match_parent"
					android:layout_height="wrap_content"
					android:gravity="center"
					android:orientation="vertical"
					android:padding="5dp">

					<TextView
						android:layout_width="wrap_content"
						android:layout_height="wrap_content"
						android:layout_margin="5dp"
						android:fontFamily="@font/opensans_semicondensed_semibold"
						android:text="Hi and Welcome to CareCabs"
						android:textAlignment="center"
						android:textColor="@color/white"
						android:textSize="20sp" />

					<TextView
						android:id="@+id/firstnameTextView"
						android:layout_width="wrap_content"
						android:layout_height="wrap_content"
						android:layout_margin="10dp"
						android:fontFamily="@font/opensans_bold"
						android:text="Name"
						android:textAlignment="center"
						android:textColor="@color/white"
						android:textSize="20sp" />

					<TextView
						android:id="@+id/currentTimeTextView"
						android:layout_width="wrap_content"
						android:layout_height="wrap_content"
						android:layout_margin="5dp"
						android:fontFamily="@font/opensans_semicondensed_semibold"
						android:text="Current Time"
						android:textAlignment="center"
						android:textColor="@color/white"
						android:textSize="20sp" />

					<TextView
						android:id="@+id/greetTextView"
						android:layout_width="wrap_content"
						android:layout_height="wrap_content"
						android:layout_margin="5dp"
						android:fontFamily="@font/opensans_semicondensed_semibold"
						android:text="Good Morning"
						android:textAlignment="center"
						android:textColor="@color/white"
						android:textSize="20sp" />

				</LinearLayout>

				<LinearLayout
					android:id="@+id/progressBarLayout1"
					android:layout_width="match_parent"
					android:layout_height="wrap_content"
					android:background="@color/tomato"
					android:gravity="center"
					android:orientation="vertical">

					<pl.droidsonroids.gif.GifImageView
						android:layout_width="wrap_content"
						android:layout_height="wrap_content"
						android:layout_margin="20dp"
						android:src="@drawable/loading_gif" />

				</LinearLayout>

			</androidx.cardview.widget.CardView>

			<androidx.cardview.widget.CardView
				android:id="@+id/progressBarLayout2"
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:layout_margin="10dp"
				app:cardBackgroundColor="@color/white"
				app:cardCornerRadius="10dp"
				app:cardElevation="5dp">

				<LinearLayout
					android:layout_width="match_parent"
					android:layout_height="wrap_content"
					android:gravity="center"
					android:orientation="vertical">

					<pl.droidsonroids.gif.GifImageView
						android:layout_width="wrap_content"
						android:layout_height="wrap_content"
						android:layout_margin="20dp"
						android:src="@drawable/loading_gif" />

				</LinearLayout>

			</androidx.cardview.widget.CardView>

			<androidx.cardview.widget.CardView
				android:id="@+id/passengerQuickBtnLayout"
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:layout_margin="10dp"
				app:cardBackgroundColor="@color/white"
				app:cardCornerRadius="10dp"
				app:cardElevation="5dp">

				<LinearLayout
					android:layout_width="match_parent"
					android:layout_height="wrap_content"
					android:gravity="center"
					android:orientation="horizontal"
					android:padding="5dp">

					<androidx.cardview.widget.CardView
						android:id="@+id/bookingHistoryBtn"
						android:layout_width="0dp"
						android:layout_height="100dp"
						android:layout_margin="5dp"
						android:layout_weight="1"
						app:cardBackgroundColor="@color/light_blue"
						app:cardCornerRadius="10dp"
						app:cardElevation="5dp">

						<LinearLayout
							android:layout_width="match_parent"
							android:layout_height="wrap_content"
							android:gravity="center"
							android:orientation="vertical">

							<TextView
								android:layout_width="wrap_content"
								android:layout_height="wrap_content"
								android:fontFamily="@font/opensans_bold"
								android:text="Booking History"
								android:textColor="@color/white"
								android:textSize="17sp" />

							<ImageView
								android:layout_width="wrap_content"
								android:layout_height="wrap_content"
								android:src="@drawable/calendar_64" />

						</LinearLayout>

					</androidx.cardview.widget.CardView>

					<androidx.cardview.widget.CardView
						android:id="@+id/bookARideBtn"
						android:layout_width="0dp"
						android:layout_height="100dp"
						android:layout_margin="5dp"
						android:layout_weight="1"
						app:cardBackgroundColor="@color/cheese"
						app:cardCornerRadius="10dp"
						app:cardElevation="5dp">

						<LinearLayout
							android:layout_width="match_parent"
							android:layout_height="wrap_content"
							android:gravity="center"
							android:orientation="vertical">

							<TextView
								android:layout_width="wrap_content"
								android:layout_height="wrap_content"
								android:fontFamily="@font/opensans_bold"
								android:text="Book a Ride"
								android:textColor="@color/black"
								android:textSize="17sp" />

							<ImageView
								android:layout_width="wrap_content"
								android:layout_height="wrap_content"
								android:src="@drawable/ride_booking_64" />

						</LinearLayout>

					</androidx.cardview.widget.CardView>


				</LinearLayout>

			</androidx.cardview.widget.CardView>

			<androidx.cardview.widget.CardView
				android:id="@+id/driverStatsLayout"
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:layout_margin="10dp"
				app:cardBackgroundColor="@color/white"
				app:cardCornerRadius="10dp"
				app:cardElevation="5dp">

				<LinearLayout
					android:layout_width="match_parent"
					android:layout_height="wrap_content"
					android:gravity="center"
					android:orientation="vertical">

					<TextView
						android:id="@+id/driverDashBoardTextView"
						android:layout_width="match_parent"
						android:layout_height="wrap_content"
						android:layout_margin="10dp"
						android:drawableEnd="@drawable/driver_32"
						android:fontFamily="@font/opensans_condensed_extrabold"
						android:text="Driver Dashboard"
						android:textAlignment="center"
						android:textColor="@color/black"
						android:textSize="17sp" />

					<TextView
						android:id="@+id/driverRatingTextView"
						android:layout_width="wrap_content"
						android:layout_height="wrap_content"
						android:layout_margin="10dp"
						android:fontFamily="@font/opensans_extrabold"
						android:text="Driver Rating"
						android:textAlignment="center"
						android:textColor="@color/blue"
						android:textSize="25sp" />

					<TextView
						android:layout_width="wrap_content"
						android:layout_height="wrap_content"
						android:layout_margin="10dp"
						android:fontFamily="@font/opensans_regular"
						android:text="@string/driver_availability_info"
						android:textAlignment="center"
						android:textColor="@color/black"
						android:textSize="17sp" />

					<androidx.appcompat.widget.SwitchCompat
						android:id="@+id/driverStatusSwitch"
						android:layout_width="match_parent"
						android:layout_height="wrap_content"
						android:layout_margin="10dp"
						android:checked="true"
						android:fontFamily="@font/opensans_regular"
						android:text="or set your Availability manually"
						android:textAlignment="center"
						android:textColor="@color/black"
						android:textSize="17sp" />

					<TextView
						android:id="@+id/driverStatusTextView"
						android:layout_width="wrap_content"
						android:layout_height="wrap_content"
						android:fontFamily="@font/opensans_semibold"
						android:text="Driver Status"
						android:textAlignment="center"
						android:textColor="@color/black"
						android:textSize="17sp" />

					<LinearLayout
						android:layout_width="match_parent"
						android:layout_height="wrap_content"
						android:layout_margin="10dp"
						android:gravity="center"
						android:orientation="horizontal">

						<androidx.cardview.widget.CardView
							android:layout_width="0dp"
							android:layout_height="wrap_content"
							android:layout_margin="5dp"
							android:layout_weight="1"
							app:cardBackgroundColor="@color/background"
							app:cardCornerRadius="10dp"
							app:cardElevation="5dp">

							<LinearLayout
								android:layout_width="match_parent"
								android:layout_height="wrap_content"
								android:gravity="center"
								android:orientation="vertical"
								android:padding="10dp">

								<ImageView
									android:layout_width="wrap_content"
									android:layout_height="wrap_content"
									android:src="@drawable/car_64_2" />

								<TextView
									android:id="@+id/passengerTransportedTextView"
									android:layout_width="match_parent"
									android:layout_height="wrap_content"
									android:layout_margin="10dp"
									android:fontFamily="@font/opensans_medium"
									android:text="Passengers\nTransported: 0"
									android:textAlignment="center"
									android:textColor="@color/black"
									android:textSize="17sp" />

							</LinearLayout>


						</androidx.cardview.widget.CardView>


						<androidx.cardview.widget.CardView
							android:layout_width="0dp"
							android:layout_height="wrap_content"
							android:layout_margin="5dp"
							android:layout_weight="1"
							app:cardBackgroundColor="@color/background"
							app:cardCornerRadius="10dp"
							app:cardElevation="5dp">

							<LinearLayout
								android:layout_width="match_parent"
								android:layout_height="wrap_content"
								android:layout_margin="10dp"
								android:gravity="center"
								android:orientation="vertical">

								<ImageView
									android:layout_width="wrap_content"
									android:layout_height="wrap_content"
									android:src="@drawable/distance_64" />

								<TextView
									android:id="@+id/totalDistanceTravelledTextView"
									android:layout_width="match_parent"
									android:layout_height="wrap_content"
									android:layout_margin="10dp"
									android:fontFamily="@font/opensans_medium"
									android:text="Total Distance Travelled: 0km"
									android:textAlignment="center"
									android:textColor="@color/black"
									android:textSize="17sp" />

							</LinearLayout>


						</androidx.cardview.widget.CardView>

					</LinearLayout>

				</LinearLayout>

			</androidx.cardview.widget.CardView>

			<androidx.cardview.widget.CardView
				android:id="@+id/passengerStatsLayout"
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:layout_margin="10dp"
				app:cardBackgroundColor="@color/white"
				app:cardCornerRadius="10dp"
				app:cardElevation="5dp">

				<LinearLayout
					android:layout_width="match_parent"
					android:layout_height="wrap_content"
					android:gravity="center"
					android:orientation="vertical">

					<TextView
						android:id="@+id/yourTripOverviewTextView"
						android:layout_width="match_parent"
						android:layout_height="wrap_content"
						android:layout_margin="10dp"
						android:fontFamily="@font/opensans_condensed_extrabold"
						android:text="Your Trip Overview"
						android:textAlignment="center"
						android:textColor="@color/black"
						android:textSize="17sp" />

					<TextView
						android:id="@+id/totalTripsTextView"
						android:layout_width="match_parent"
						android:layout_height="wrap_content"
						android:layout_margin="10dp"
						android:fontFamily="@font/opensans_extrabold"
						android:text="Total Trips"
						android:textAlignment="center"
						android:textColor="@color/blue"
						android:textSize="25sp" />

				</LinearLayout>

			</androidx.cardview.widget.CardView>


			<androidx.cardview.widget.CardView
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:layout_margin="10dp"
				app:cardBackgroundColor="@color/white"
				app:cardCornerRadius="10dp"
				app:cardElevation="5dp">

				<LinearLayout
					android:layout_width="match_parent"
					android:layout_height="wrap_content"
					android:gravity="center"
					android:orientation="vertical">

					<androidx.viewpager.widget.ViewPager
						android:id="@+id/viewPager"
						android:layout_width="match_parent"
						android:layout_height="200dp"
						android:layout_margin="10dp" />

				</LinearLayout>

			</androidx.cardview.widget.CardView>

		</LinearLayout>

	</ScrollView>


</RelativeLayout>