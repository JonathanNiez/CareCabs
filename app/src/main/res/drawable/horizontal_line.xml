<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- Background color (optional) -->
    <item android:id="@android:id/button1">
        <shape android:shape="rectangle">
            <solid android:color="#FFFFFF" /> <!-- Set your desired background color -->
        </shape>
    </item>

    <!-- Bottom stroke -->
    <item android:bottom="0dp">
        <shape android:shape="line">
            <stroke
                android:width="2dp"
                android:color="#000000" /> <!-- Set the stroke color -->
        </shape>
    </item>

</layer-list>